<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/blog">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x1"
        android:gravity="center">
        <EditText
            android:id="@+id/blog_title"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x40"
            android:hint="文章标题"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/blog_search"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:gravity="center"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/x50"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_list_view"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x50"
        >
    </ListView>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/x1"
            fab:fab_addButtonColorNormal="@color/fab"
            fab:fab_icon="@drawable/ic_add_black_24dp"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_1"
                fab:fab_colorNormal="@color/fab"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_top_black_24dp"
                fab:fab_title="置顶"/>
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_2"
                fab:fab_colorNormal="@color/fab"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_write_black_24dp"
                fab:fab_title="写文章"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </LinearLayout>
</RelativeLayout>
