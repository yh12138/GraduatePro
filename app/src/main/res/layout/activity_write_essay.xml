<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FFFF"
    tools:context=".WriteEssayActivity">
    <com.example.utils.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.utils.TitleLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:gravity="center">
        <TextView
            android:textSize="22sp"
            android:layout_marginTop="@dimen/x5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:text="选择图片"/>
        <ImageView
            android:id="@+id/writeimg"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:gravity="center"
            android:src="@drawable/logo" />

    </LinearLayout>
    <com.example.utils.LimitScrollEditText
        android:id="@+id/WriteTitle"
        android:layout_width="@dimen/x280"
        android:layout_height="@dimen/x50"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/layout_border"
        app:hint="请输入内容"
        app:maxLength="10" />

	<com.example.utils.LimitScrollEditText
        android:id="@+id/WriteContent"
        android:layout_width="@dimen/x280"
        android:layout_height="@dimen/x220"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/layout_border"
        app:hint="请输入内容"
        app:maxLength="10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center">
        <Button
            android:id="@+id/write_submit"
            android:text="提交"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:textSize="20sp"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x40"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>